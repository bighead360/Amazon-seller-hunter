<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>
<div class="alert alert-info" role="alert">total Books : <%= Book.all.count %> results</div>
<div class="alert alert-info" role="alert">total Books : <%= Book.count_books %> results</div>


<table class="table table-striped">
  <thead>
    <tr>
     <th>Cover Image</th>
     
      <th>Name</th>
      <th>Author</th>
      <th>Publisher</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
<style>table tr td img { width:50px; height: auto; }</style>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.cover_image %> </td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.isbn %></td>
         <td><%= book.weight %></td>
         <td><%= book.listPrice %></td>
        <td><%= book.condition.humanize %></td>
        <td><%= book.cover_type.humanize %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @books%>

<br>

<%= link_to 'New Book', new_book_path %>
