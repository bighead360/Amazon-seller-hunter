<p id="notice"><%= notice %></p>

<h1>Listing Sellers</h1>

<table>
  <thead>
    <tr>
      <th>Seller name</th>
      <th>Price</th>
      <th>Prime</th>
      <th>Rate</th>
      <th>Total ratings</th>
      <th>In stock</th>
      <th>Shippingfee</th>
      <th>Ship from</th>
      <th>Score</th>
      <th>Free shipping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sellers.each do |seller| %>
      <tr>
        <td><%= seller.seller_name %></td>
        <td><%= seller.price %></td>
        <td><%= seller.prime %></td>
        <td><%= seller.rate %></td>
        <td><%= seller.total_ratings %></td>
        <td><%= seller.in_stock %></td>
        <td><%= seller.shippingfee %></td>
        <td><%= seller.ship_from %></td>
        <td><%= seller.seller_url %></td>
        <td><%= seller.score %></td>
        <td><%= seller.free_shipping %></td>
        <td><%= link_to 'Show', seller %></td>
        <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
        <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

